# Railway PostgreSQL Database URL (automatically provided by Railway)
DATABASE_URL=postgresql://postgres:password@localhost:5432/railway

# Node Environment
NODE_ENV=production
PORT=3000

# Cloudinary Configuration for Image Storage
CLOUDINARY_CLOUD_NAME=zentro-homes
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# JWT Secret for Admin Authentication
JWT_SECRET=your-super-secret-jwt-key-here-change-this-in-production

# Admin Configuration (hardcoded credentials)
ADMIN_EMAIL=admin@zentrohomes.com
ADMIN_PASSWORD=admin123

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://zentrohomes.com,https://www.zentrohomes.com,https://zentro-homes.up.railway.app

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
MAX_FILES_PER_UPLOAD=10

# Email Configuration (for contact forms)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Analytics Configuration (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X

# Logging Level
LOG_LEVEL=info